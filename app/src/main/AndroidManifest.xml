<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="alexparunov.lookaround">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".accounts.SignIn" />
        <activity android:name=".accounts.SignUp" />
        <activity android:name=".accounts.ForgotPassword" />
        <activity
            android:name=".authenticated.AuthMainActivity"
            android:label="@string/title_activity_auth_main" />
    </application>

</manifest>